<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    
    <!-- Translate Text -->
    <route url="/V1/nativelang/translate" method="POST">
        <service class="NativeMind\Translation\Api\TranslationManagementInterface" method="translateText"/>
        <resources>
            <resource ref="NativeMind_Translation::translate"/>
        </resources>
    </route>
    
    <!-- Translate Multiple Texts -->
    <route url="/V1/nativelang/translate-batch" method="POST">
        <service class="NativeMind\Translation\Api\TranslationManagementInterface" method="translateTexts"/>
        <resources>
            <resource ref="NativeMind_Translation::translate"/>
        </resources>
    </route>
    
    <!-- Translate Single Product -->
    <route url="/V1/nativelang/product/:productId/translate" method="POST">
        <service class="NativeMind\Translation\Api\TranslationManagementInterface" method="translateProduct"/>
        <resources>
            <resource ref="NativeMind_Translation::translate_products"/>
        </resources>
    </route>
    
    <!-- Translate Multiple Products -->
    <route url="/V1/nativelang/products/translate" method="POST">
        <service class="NativeMind\Translation\Api\TranslationManagementInterface" method="translateProducts"/>
        <resources>
            <resource ref="NativeMind_Translation::translate_products"/>
        </resources>
    </route>
    
    <!-- Get Translation Status -->
    <route url="/V1/nativelang/status/:translationId" method="GET">
        <service class="NativeMind\Translation\Api\TranslationManagementInterface" method="getTranslationStatus"/>
        <resources>
            <resource ref="NativeMind_Translation::translation"/>
        </resources>
    </route>
    
    <!-- Get Translation Statistics -->
    <route url="/V1/nativelang/stats" method="GET">
        <service class="NativeMind\Translation\Api\TranslationManagementInterface" method="getTranslationStats"/>
        <resources>
            <resource ref="NativeMind_Translation::translation"/>
        </resources>
    </route>
    
    <!-- Get Translation Statistics for Store -->
    <route url="/V1/nativelang/stats/:storeId" method="GET">
        <service class="NativeMind\Translation\Api\TranslationManagementInterface" method="getTranslationStats"/>
        <resources>
            <resource ref="NativeMind_Translation::translation"/>
        </resources>
    </route>
    
    <!-- Admin Management APIs -->
    <route url="/V1/nativelang/admin/queue/status" method="GET">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="getQueueStatus"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/api-usage" method="GET">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="getApiUsage"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/cache/clear" method="POST">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="clearCache"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/product/:productId/translate" method="POST">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="forceTranslateProduct"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/category/:categoryId/translate" method="POST">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="forceTranslateCategory"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/history" method="GET">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="getTranslationHistory"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/queue/retry-failed" method="POST">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="retryFailedTranslations"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/queue/:queueId" method="GET">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="getQueueItemDetails"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/queue/:queueId/cancel" method="POST">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="cancelQueueItem"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/configuration" method="GET">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="getConfiguration"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/configuration" method="POST">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="updateConfiguration"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/test-connection" method="GET">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="testConnection"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
    <route url="/V1/nativelang/admin/history/purge" method="POST">
        <service class="NativeLang\Translation\Api\AdminManagementInterface" method="purgeOldHistory"/>
        <resources>
            <resource ref="NativeLang_Translation::admin"/>
        </resources>
    </route>
    
</routes>
